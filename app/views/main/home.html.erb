

<% if user_signed_in? %>
  <h1 class="text-center mb-4">Welcom To Bug Tracking Website...</h1>
  <div class="container mt-3">
    <div class="d-flex justify-content-center">
      <% if can? :manage, Project %>
        <%= link_to 'Create New Project', new_project_path, class: 'btn btn-primary me-2' %>
        <%= link_to 'See All Projects', projects_path, class: 'btn btn-secondary' %>
      <% elsif can? :read, Project %>
        <%= link_to 'See Projects', projects_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container mt-3">
    <div class="d-flex justify-content-center">
      <p>Please <%= link_to 'sign in', new_user_session_path, class: 'btn btn-link' %> to access this page.</p>
    </div>
  </div>
<% end %>
