<div class="card m-auto mt-5 p-3 mh-50 w-75 bg-light ">
  <% if user_signed_in? %>
    <div class="container mt-5">
      <h1 class="text-center mb-4 display-4">Welcome to Bug Tracking Website</h1>
      <div class="row justify-content-center mt-4">
        <% if can? :manage, Project %>
          <div class="col-md-4 text-center">
            <%= link_to 'Create New Project', new_project_path, class: 'btn btn-primary btn-lg w-100 mb-2' %>
          </div>
          <div class="col-md-4 text-center">
            <%= link_to 'See All Projects', projects_path, class: 'btn btn-secondary btn-lg w-100 mb-2' %>
          </div>
        <% elsif can? :read, Project %>
          <div class="col-md-4 text-center">
            <%= link_to 'See Projects', projects_path, class: 'btn btn-secondary btn-lg w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center">
          <p class="lead">Please <%= link_to 'sign in', new_user_session_path, class: 'btn btn-link' %> to access this page.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>  